<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    >

    <ImageView
        android:id="@+id/IvLogo"
        android:layout_width="166dp"
        android:layout_height="173dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bodybuilder" />

    <EditText
        android:id="@+id/EtDni"
        android:layout_width="196dp"
        android:layout_height="39dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IvLogo" />

    <TextView
        android:id="@+id/TvDni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dni:"
        app:layout_constraintBottom_toBottomOf="@+id/EtDni"
        app:layout_constraintEnd_toStartOf="@+id/EtDni"
        app:layout_constraintHorizontal_bias="0.824"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/EtDni"
        app:layout_constraintVertical_bias="0.583" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contrasenya:"
        app:layout_constraintBottom_toBottomOf="@+id/EtContrasenya"
        app:layout_constraintEnd_toStartOf="@+id/EtContrasenya"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/EtContrasenya" />

    <EditText
        android:id="@+id/EtContrasenya"
        android:layout_width="196dp"
        android:layout_height="42dp"
        android:layout_marginBottom="248dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/EtDni"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/EtDni"
        app:layout_constraintTop_toBottomOf="@+id/EtDni"
        app:layout_constraintVertical_bias="0.248" />

    <Button
        android:id="@+id/BtRegistre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="Registra't"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/BtEntrar" />

    <Button
        android:id="@+id/BtEntrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="120dp"
        android:text="Entrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/BtRegistre"
        app:layout_constraintStart_toEndOf="@+id/BtBaixaUsuari"
        app:layout_constraintTop_toBottomOf="@+id/EtContrasenya"
        app:layout_constraintVertical_bias="0.503" />

    <Button
        android:id="@+id/BtBaixaUsuari"
        android:layout_width="98dp"
        android:layout_height="52dp"
        android:layout_marginStart="28dp"
        android:text="Baixa Usuari"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/BtEntrar" />
</androidx.constraintlayout.widget.ConstraintLayout>