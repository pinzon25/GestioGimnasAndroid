<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fonspantallaaplicacio"
    tools:context=".ModificaDadesUsuari">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="132dp"
        android:layout_height="106dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bodybuilder" />

    <EditText
        android:id="@+id/TfModificaContrasenya"
        android:layout_width="164dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:textColor="#ffffff"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LbClientModificaDades" />

    <EditText
        android:id="@+id/TfRepeticioModifica"
        android:layout_width="165dp"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:textColor="#ffffff"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TfModificaContrasenya" />

    <EditText
        android:id="@+id/TfCodipostalModifica"
        android:layout_width="166dp"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:textColor="#ffffff"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TfRepeticioModifica" />

    <EditText
        android:id="@+id/TfPoblacioModifica"
        android:layout_width="167dp"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:textColor="#ffffff"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.553"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TfCodipostalModifica" />

    <EditText
        android:id="@+id/TfCompteIbanModifica"
        android:layout_width="167dp"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:textColor="#ffffff"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.561"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TfPoblacioModifica" />

    <TextView
        android:id="@+id/LbContrasenyaModifica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contrasenya"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="@+id/TfModificaContrasenya"
        app:layout_constraintEnd_toStartOf="@+id/TfModificaContrasenya"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/TfModificaContrasenya" />

    <TextView
        android:id="@+id/LbRepeticio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repeticio"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="@+id/TfRepeticioModifica"
        app:layout_constraintEnd_toStartOf="@+id/TfRepeticioModifica"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/TfRepeticioModifica" />

    <TextView
        android:id="@+id/LbCodipostalModifica"
        android:layout_width="74dp"
        android:layout_height="16dp"
        android:text="Codi Postal"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="@+id/TfCodipostalModifica"
        app:layout_constraintEnd_toStartOf="@+id/TfCodipostalModifica"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/TfCodipostalModifica" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="54dp"
        android:layout_height="15dp"
        android:text="Poblacio"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="@+id/TfPoblacioModifica"
        app:layout_constraintEnd_toStartOf="@+id/TfPoblacioModifica"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/TfPoblacioModifica" />

    <TextView
        android:id="@+id/LbComptePagamentModifica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compte IBAN"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="@+id/TfCompteIbanModifica"
        app:layout_constraintEnd_toStartOf="@+id/TfCompteIbanModifica"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/TfCompteIbanModifica" />

    <Button
        android:id="@+id/BtActualitzaContrasenya"
        android:layout_width="231dp"
        android:layout_height="34dp"
        android:background="@drawable/gradientbuton"
        android:onClick="modificaContrasenya"
        android:text="Actualitza Contrasenya"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TfCompteIbanModifica" />

    <Button
        android:id="@+id/BtActualitzapoblaCp"
        android:layout_width="204dp"
        android:layout_height="34dp"
        android:background="@drawable/gradientbuton"
        android:onClick="modificaPoblacio"
        android:text="Actualitza Poblacio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.544"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtActualitzaContrasenya" />

    <Button
        android:id="@+id/BtCodiPostalModifica"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:background="@drawable/gradientbuton"
        android:onClick="modificaCodiPostal"
        android:text="Actualitza CP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtActualitzapoblaCp" />

    <Button
        android:id="@+id/BtActualitzaIban"
        android:layout_width="151dp"
        android:layout_height="36dp"
        android:background="@drawable/gradientbuton"
        android:onClick="modificaIban"
        android:text="Actualitza IBAN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtCodiPostalModifica" />

    <TextView
        android:id="@+id/LbClientModificaDades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/BtSortirModificarDades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gradientbuton"
        android:onClick="sortir"
        android:text="Sortir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtActualitzaIban"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>